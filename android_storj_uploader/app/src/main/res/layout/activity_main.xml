<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.storjapp.MainActivity">

    <!-- Upper section - Status Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Storj Photo Uploader"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/settingsButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="â˜°"
                android:textSize="32sp"
                android:textColor="@android:color/black"
                android:clickable="true"
                android:focusable="true"
                style="@style/Widget.Material3.Button.TextButton" />

        </RelativeLayout>

        <TextView
            android:id="@+id/healthCheckText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="API: Checking..."
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Ready"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/uploadQuotaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Quota: Calculating..."
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" />

    <!-- Lower section - Photo Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#F5F5F5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="@android:color/white" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photoGridRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="4dp"
                tools:listitem="@layout/item_photo_grid" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>

</LinearLayout>
